{% extends 'base.html.twig' %}
{% block title %}ASV Basketball{% endblock %}

{% block body %}

    <img id="image-home" src="{{asset('image/image-home.jpg')}}" alt=""/>
    <div id="align-navbar-home"></div>

    {# A LA UNE #}

    <div class="row pb-5">
        <div class="container">
            <div class="col align-self-center mb-5 mt-5 text-center">
                <div class="row">
                    <div id="separator-home" class="col align-self-center"></div>

                    <div class="col-auto">
                        <h1 class="h1-home-page">à la une</h1>
                    </div>
                    <div id="separator-home" class="col align-self-center"></div>
                </div>
            </div>
            <div class="row">
                {% for i in 1..3 %}
                    <div class="col">
                        <div class="card">
                            <img class="card-img-top" src="https://fakeimg.pl/250x200/" alt="Card image cap">
                            <div class="card-body">
                                <p class="titre-article-home">Titre article</p>
                                <p class="date-article">jj/mm/aaaa</p>
                                <p class="card-text">Some quick example text to build on the titre acrticle and make up the bulk of the card's content.</p>
                                <a href="#" class="btn btn-primary">LIRE</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    {# DERNIERS RESULTATS #}

    <div class="row pb-5 bg-color-home">
        <div class="container">
            <div class="col align-self-center mb-5 mt-5 text-center">
                <div class="row">
                    <div id="separator-home" class="col align-self-center"></div>

                    <div class="col-auto">
                        <h1 class="h1-home-page">les derniers résultats</h1>
                    </div>
                    <div id="separator-home" class="col align-self-center"></div>
                </div>
            </div>
            <div class="row justify-content-center">
                {% for i in 1..6 %}
                    <div="col">
                        <div class="card">
                            <div class="card-header">
                                U-13F - Chateaugiron
                            </div>
                            <div class="card-body">
                                <p>jj/mm/aaaa</p>
                            </div>
                        </div>

                    {% endfor %}
                </div>
            </div>
        </div>

        {# DERNIERE PHOTO #}

        <div class="row pb-5">
            <div class="container">
                <div class="col align-self-center mb-5 mt-5 text-center">
                    <div class="row">
                        <div id="separator-home" class="col align-self-center"></div>

                        <div class="col-auto">
                            <h1 class="h1-home-page">Les dernières photos</h1>
                        </div>
                        <div id="separator-home" class="col align-self-center"></div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    {% for i in 1..12 %}
                        <div class="card">
                            <a href="#"><img class="card-img-top" src="https://fakeimg.pl/250x200/" alt=""></a>
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>

        {# LA BOUTIQUE #}

        <div class="row pb-5 bg-color-home">
            <div class="container">
                <div class="col align-self-center mb-5 mt-5 text-center">
                    <div class="row">
                        <div id="separator-home" class="col align-self-center"></div>

                        <div class="col-auto">
                            <h1 class="h1-home-page">la boutique</h1>
                        </div>
                        <div id="separator-home" class="col align-self-center"></div>
                    </div>
                </div>
                <div class="row">
                    {% for i in 1..4 %}
                        <div class="col">
                            <div class="card">
                                <img class="card-img-top" src="https://fakeimg.pl/250x200/" alt="Card image cap">
                                <div class="card-body">
                                    <p class="titre-article-home">Titre article</p>
                                    <p class="date-article">jj/mm/aaaa</p>
                                    <p class="card-text">Some quick example text to build on the titre acrticle and make up the bulk of the card's content.</p>
                                    <a href="#" class="btn btn-primary">LIRE</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

    {% endblock %}